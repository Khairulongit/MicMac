<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Technodynamic">
    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/tcnodynamic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/td_logo_4" />
    </LinearLayout>


    <TextView
        android:id="@+id/mywidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="98dp"
        android:fadingEdge="horizontal"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="To build your own android app Contact: 629 717 7380 | 890 659 4141"
        android:textColor="#0C0FD6"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/clickUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Click to find us in Google Play Store"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/googleplay"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/googleplay"
                android:clickable="true"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>